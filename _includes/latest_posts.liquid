<div class="news">
  {% if site.latest_posts.enabled %}
    {% assign latest_posts = site.posts | sort: 'date' | reverse %}
    {% assign latest_posts_limit = site.latest_posts.limit | default: 3 %}
    <div
      class="table-responsive"
      {% if site.latest_posts.scrollable and latest_posts.size > latest_posts_limit %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% for post in latest_posts limit: latest_posts_limit %}
          <tr>
            <th scope="row" style="width: 20%">{{ post.date | date: '%b %d, %Y' }}</th>
            <td>
              <a class="news-title" href="{{ post.url | relative_url }}">{{ post.title }}</a>
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No posts so far...</p>
  {% endif %}
</div>
