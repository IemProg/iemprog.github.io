---
layout: default
---
<div class="post homepage">
  <header class="hero-header">
    <div class="hero-content">
      <div class="hero-intro">
        <span class="hero-greeting">Hello, I'm</span>
        <h1 class="hero-name">
          {% if site.title == 'blank' %}
            <span class="font-weight-bold">{{ site.first_name }}</span> {{ site.middle_name }} {{ site.last_name }}
          {% else %}
            {{ site.title }}
          {% endif %}
        </h1>
        <p class="hero-subtitle">{{ page.subtitle }}</p>

        <!-- Quick highlights -->
        <div class="hero-highlights">
          <span class="highlight-badge">
            <i class="fas fa-university"></i> Institut Polytechnique de Paris
          </span>
          <span class="highlight-badge">
            <i class="fas fa-flask"></i> Continual Learning
          </span>
          <span class="highlight-badge">
            <i class="fas fa-brain"></i> Vision-Language Models
          </span>
        </div>
      </div>

      {% if page.profile %}
        <div class="hero-profile">
          {% if page.profile.image %}
            {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
            {% assign profile_image_class = 'hero-img z-depth-2' %}
            {% if page.profile.image_circular %}
              {% assign profile_image_class = profile_image_class | append: ' rounded-circle' %}
            {% else %}
              {% assign profile_image_class = profile_image_class | append: ' rounded-lg' %}
            {% endif %}
            {% capture sizes %}(min-width: {{site.max_width}}) {{ site.max_width | minus: 30 | times: 0.35}}px, 35vw"{% endcapture %}
            {% include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=page.profile.image cache_bust=true %}
          {% endif %}
          {% if page.profile.more_info %}
            <div class="more-info">{{ page.profile.more_info }}</div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </header>

  <article class="homepage-content">
    <!-- Bio Section with better formatting -->
    <section class="bio-section section-spacing">
      <div class="bio-content">
        {{ content }}
      </div>
    </section>

    <!-- Social Icons - Redesigned -->
    {% if page.social %}
      <section class="social-section">
        <div class="social-links">
          <div class="contact-icons">{% include social.liquid %}</div>
          {% if site.contact_note %}
            <div class="contact-note">{{ site.contact_note }}</div>
          {% endif %}
        </div>
      </section>
    {% endif %}

    <!-- News Section - Enhanced -->
    {% if page.news and site.announcements.enabled %}
      <section class="news-section section-spacing">
        <h2 class="section-title">
          <span class="title-icon"><i class="fas fa-newspaper"></i></span>
          <a href="{{ '/news/' | relative_url }}">Latest News</a>
        </h2>
        {% include news.liquid limit=true %}
      </section>
    {% endif %}

    <!-- Latest Blog Posts - if enabled -->
    {% if site.latest_posts.enabled %}
      <section class="latest-posts section-spacing">
        <h2 class="section-title">
          <span class="title-icon"><i class="fas fa-pen"></i></span>
          <a href="{{ '/blog/' | relative_url }}">Recent Thoughts</a>
        </h2>
        {% include latest_posts.liquid %}
      </section>
    {% endif %}

    <!-- Selected Publications - Spotlight Design -->
    {% if page.selected_papers %}
      <section class="featured-publications section-spacing">
        <h2 class="section-title">
          <span class="title-icon"><i class="fas fa-star"></i></span>
          <a href="{{ '/publications/' | relative_url }}">Featured Research</a>
        </h2>
        <p class="section-description">Highlights from my research in continual learning and vision-language models</p>
        {% include selected_papers.liquid %}
      </section>
    {% endif %}

    {% if site.newsletter.enabled and site.footer_fixed %}
      {% include scripts/newsletter.liquid center=true %}
    {% endif %}
  </article>
</div>
